{{!
    @template core_form/element-singleimage

    Single image form element template. A single image form element is an element allows the user to change and edit an image.

    Example context (json):
    {
        "label": "Example label",
        "element": {
            "id": "singleimage1",
            "html": "<img src='http://placekitten.com/300/300' alt='kitten'>"
        }
    }
}}
{{< core_form/element-template }}
    {{$label}}
        {{^element.hiddenlabel}}
            <p id="{{element.id}}_label" class="mb-0 d-inline" aria-hidden="true">
                {{{label}}}
            </p>
        {{/element.hiddenlabel}}
    {{/label}}
    {{$element}}
        <fieldset class="w-100 m-0 p-0 border-0" id="{{element.id}}_fieldset" data-fieldtype="singleimage">
            <legend class="sr-only">{{label}}</legend>
            {{{element.html}}}
        </fieldset>
    {{/element}}
{{/ core_form/element-template }}